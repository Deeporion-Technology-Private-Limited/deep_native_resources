{
  "compilerOptions": {
    "outDir": "./lib", // Output directory for compiled files
    "rootDir": "./src", // Root directory for source files
    "declaration": true, // Generate .d.ts files for type declarations
    "sourceMap": true, // Generate source maps for debugging
    "noEmit": false, // Allow emitting output files
    "strict": true, // Enable strict type checking
    "module": "commonjs", // Use CommonJS module system
    "target": "ES6", // JavaScript version target
    "esModuleInterop": true, // Enable compatibility with ES modules
    "skipLibCheck": true, // Skip type checks on declaration files
    "jsx": "react-native" // Enable JSX for React Native
  },
  "include": [
    "src/**/*" // Include all files in the src directory
  ],
  "exclude": [
    "node_modules", // Exclude node_modules
    "**/__tests__/*", // Exclude test files
    "**/*.test.ts", // Exclude TypeScript test files
    "**/*.test.tsx" // Exclude TypeScript React test files
  ]
}

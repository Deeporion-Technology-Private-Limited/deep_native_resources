{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "types": ["react-native", "jest"],
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    },
    "module": "CommonJS",
    "target": "ES6",
    "declaration": true,
    "outDir": "./lib"
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "lib/**/*",
    "**/*config.js",
    ".eslintrc.js",
    "**/__tests__/*",
    "index.js",
   " App.tsx"
  ]
}
